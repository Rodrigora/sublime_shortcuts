= form_for @shortcut do |f|
  - if @shortcut.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shortcut.errors.count, "error")} prohibited this shortcut from being saved:"
      %ul
        - @shortcut.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :key
    = f.text_field :key
  .actions
    = f.submit 'Save'
